<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="detailed_2">

<formatVersion>7</formatVersion>

	<include>./_inc/variables/lang-default.xml</include>
	<include>./_inc/variables/lang-${lang}.xml</include>

    <variables>
		
		<v.themeVersion>6.5.1</v.themeVersion>
		<v.themeAuthor>github.com/symbuzzer</v.themeAuthor>

		<v.allViews>system,basic,detailed,detailed_2,grid</v.allViews>
		<v.allGamelists>basic,detailed,detailed_2,grid</v.allGamelists>
		<v.videoGamelists>detailed,detailed_2,grid</v.videoGamelists>
		<v.detailedGamelists>detailed,detailed_2</v.detailedGamelists>
		<v.textGamelists>basic,detailed,detailed_2</v.textGamelists>

		<v.line.hc>1 / ${screen.height}</v.line.hc>
		<v.line.h>2 / ${screen.height}</v.line.h>
		<v.line.w>2 / ${screen.width}</v.line.w>
		<v.line4.w>4 / ${screen.width}</v.line4.w>

		<v.frame.x>0.5</v.frame.x>
		<v.frameLeft.x>0.22</v.frameLeft.x>
		<v.frameRight.x>0.705</v.frameRight.x>

		<v.frame.y ifHelpPrompts="true">0.50</v.frame.y>
		<v.frame.y ifHelpPrompts="false">0.53</v.frame.y>

		<v.frame.w>0.95</v.frame.w>
		<v.frameLeft.w>0.39</v.frameLeft.w>
		<v.frameRight.w>0.54</v.frameRight.w>

		<v.frame.h ifHelpPrompts="true">0.85</v.frame.h>
		<v.frame.h ifHelpPrompts="false">0.90</v.frame.h>

		<v.frameBorders.w>0.95 + (${v.line.w})</v.frameBorders.w>
		<v.frameLeftBorders.w>0.39 + (${v.line.w})</v.frameLeftBorders.w>
		<v.frameRightBorders.w>0.54 + (${v.line.w})</v.frameRightBorders.w>

		<v.frameBorders.h ifHelpPrompts="true">0.85 + (${v.line.h})</v.frameBorders.h>
		<v.frameBorders.h ifHelpPrompts="false">0.90 + (${v.line.h})</v.frameBorders.h>

		<v.frame.size>${v.frame.w} ${v.frame.h}</v.frame.size>
		<v.frameLeft.size>${v.frameLeft.w} ${v.frame.h}</v.frameLeft.size>
		<v.frameRight.size>${v.frameRight.w} ${v.frame.h}</v.frameRight.size>

		<v.frame.pos>${v.frame.x} ${v.frame.y}</v.frame.pos>
		<v.frameLeft.pos>${v.frameLeft.x} ${v.frame.y}</v.frameLeft.pos>
		<v.frameRight.pos>${v.frameRight.x} ${v.frame.y}</v.frameRight.pos>

		<v.frameBorders.size>${v.frameBorders.w} ${v.frameBorders.h}</v.frameBorders.size>
		<v.frameLeftBorders.size>${v.frameLeftBorders.w} ${v.frameBorders.h}</v.frameLeftBorders.size>
		<v.frameRightBorders.size>${v.frameRightBorders.w} ${v.frameBorders.h}</v.frameRightBorders.size>

		<v.gamelist.fontSize>0.024</v.gamelist.fontSize>
		<v.gamelistDetailed.size ifHelpPrompts="true">0.39 0.85</v.gamelistDetailed.size>
		<v.gamelistDetailed.size ifHelpPrompts="false">0.39 0.90</v.gamelistDetailed.size>
		<v.gamelistBasic.size ifHelpPrompts="true">0.95 0.85</v.gamelistBasic.size>
		<v.gamelistBasic.size ifHelpPrompts="false">0.95 0.90</v.gamelistBasic.size>
		<v.gamelistGrid.size ifHelpPrompts="true">0.95 0.85</v.gamelistGrid.size>
		<v.gamelistGrid.size ifHelpPrompts="false">0.95 0.90</v.gamelistGrid.size>

		<v.gameDescription.y ifHelpPrompts="true">0.700</v.gameDescription.y>
		<v.gameDescription.y ifHelpPrompts="false">0.740</v.gameDescription.y>

		<v.boxart.pos ifHelpPrompts="true">0.705 0.625</v.boxart.pos>
		<v.boxart.pos ifHelpPrompts="false">0.705 0.65</v.boxart.pos>

		<v.video.pos ifHelpPrompts="true">0.705 0.30</v.video.pos>
		<v.video.pos ifHelpPrompts="false">0.705 0.325</v.video.pos>

		<c.text>ffffff</c.text>
		<c.selected>000000</c.selected>
		<c.glowColor>0000004d</c.glowColor>

		<v.lines ifHelpPrompts="true">11</v.lines>
		<v.lines ifHelpPrompts="false">12</v.lines>

		<v.gamecounttext ifHelpPrompts="true">0 0.87</v.gamecounttext>
		<v.gamecounttext ifHelpPrompts="false">0 0.92</v.gamecounttext>

		<v.gridAutoLayout if="${screen.width} &lt;= '641'">3 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '641' &amp;&amp; ${screen.width} &lt;= '721'">3 3</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '721' &amp;&amp; ${screen.width} &lt;= '1281'">4 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '1281'">5 3</v.gridAutoLayout>

		<v.helpIconFolder ifSubset="helpIcons:psx">psx</v.helpIconFolder>
		<v.helpIconFolder ifSubset="helpIcons:snes">snes</v.helpIconFolder>
		<v.helpIconFolder ifSubset="helpIcons:snesAlt">snesAlt</v.helpIconFolder>
		<v.helpIconFolder ifSubset="helpIcons:xbox">xbox</v.helpIconFolder>
		<v.helpIconFolder ifSubset="helpIcons:xboxOne">xboxOne</v.helpIconFolder>
		<v.helpIconFolder ifSubset="helpIcons:default"></v.helpIconFolder>

		<v.ScrollBar>0.0035</v.ScrollBar>
		<v.ScrollBar2>0.0045</v.ScrollBar2>
		
		<f.def>font.ttf</f.def>
		<f.defbold>font-bold.ttf</f.defbold>

    </variables>

	<view name="basic,detailed"></view>
	<customView name="detailed_2"></customView>
	<view name="grid"></view>

	<subset name="slideType"
	
		displayName="${subset.slideType}"
		appliesTo="${subset.system}"
		
	>

		<include name="horizontal" displayName="${subset.options.horizontal}" />
		<include name="vertical" displayName="${subset.options.vertical}" />	
	
	</subset>

	<subset name="slideTypeGrid"
	
		displayName="${subset.slideType}"
		appliesTo="grid"
		
	>

		<include name="vertical" displayName="${subset.options.vertical}" />
		<include name="horizontal" displayName="${subset.options.horizontal}" />	
	
	</subset>

	<subset name="themeColors"
	
		displayName="${subset.themeColors}"
		
	>

		<include name="knulli" displayName="knulli" >./_inc/variables/themeColors-knulli.xml</include>
		<include name="batocera" displayName="batocera" >./_inc/variables/themeColors-batocera.xml</include>
		<include name="rocknix" displayName="rocknix" >./_inc/variables/themeColors-rocknix.xml</include>
		<include name="anbernic" displayName="anbernic" >./_inc/variables/themeColors-anbernic.xml</include>
		<include name="powkiddy" displayName="powkiddy" >./_inc/variables/themeColors-powkiddy.xml</include>
		<include name="miyoo" displayName="miyoo" >./_inc/variables/themeColors-miyoo.xml</include>
		<include name="trimui" displayName="trimui" >./_inc/variables/themeColors-trimui.xml</include>
	
	</subset>

	<subset name="splashscreen"
	
		displayName="${subset.splashscreen}"
		
	>
	
		<include name="colorset" displayName="${subset.splashscreen.colorset}" />
		<include name="default" displayName="${subset.options.default}" />
		<include name="knulli" displayName="knulli" />
		<include name="knulli_gladiator" displayName="knulli gladiator" />
		<include name="knulli_firefly" displayName="knulli firefly" />
		<include name="batocera" displayName="batocera" />
		<include name="rocknix" displayName="rocknix" />
		<include name="anbernic" displayName="anbernic" />
		<include name="powkiddy" displayName="powkiddy" />
		<include name="miyoo" displayName="miyoo" />
		<include name="trimui" displayName="trimui" />
		<include name="disabled" displayName="${subset.options.disabled}" />
	
	</subset>

	<subset name="helpIcons"
	
		displayName="${subset.helpIcons}"
		
	>
	
		<include name="default" displayName="${subset.options.default}" />
		<include name="psx" displayName="psx" />
		<include name="snes" displayName="snes - super famicom" />
		<include name="snesAlt" displayName="snes - super famicom (alt)" />
		<include name="xbox" displayName="xbox" />
		<include name="xboxOne" displayName="xbox one" />
	
	</subset>

	<subset name="systemlogoeffects"
	
		displayName="${subset.systemlogoeffects}"
		appliesTo="${subset.system}"
		
	>

		<include name="enabled" displayName="${subset.options.enabled}" />
		<include name="disabled" displayName="${subset.options.disabled}" />	
	
	</subset>

	<subset name="gamecount"
	
		displayName="${subset.gamecount}"
		appliesTo="${subset.system}"
		
	>

		<include name="no" displayName="${subset.options.no}" />
		<include name="yes" displayName="${subset.options.yes}" />	
	
	</subset>

	<subset name="videoPreviews"
	
		displayName="${subset.videoPreviews}"
		appliesTo="${v.videoGamelists}"
		
	>

		<include name="enabled" displayName="${subset.options.enabled}" />	
		<include name="disabled" displayName="${subset.options.disabled}" />
	
	</subset>

	<subset name="videoSize"
	
		displayName="${subset.videoSize}"
		appliesTo="detailed_2"
		
	>

		<include name="normal" displayName="${subset.options.normal}" />	
		<include name="full" displayName="${subset.options.full}" />
	
	</subset>

	<subset name="videoLatency"
	
		displayName="${subset.videoLatency}"
		appliesTo="${v.detailedGamelists}"
		
	>

		<include name="2"/>	
		<include name="5"/>
		<include name="8"/>
		<include name="15"/>
	
	</subset>


	<subset name="scrollSpeed"
	
		displayName="${subset.scrollSpeed}"
		appliesTo="detailed"
		
	>

		<include name="fast" displayName="${subset.options.fast}" />
		<include name="normal" displayName="${subset.options.normal}" />	
	
	</subset>

	<subset name="systemlogosongamelists"
	
		displayName="${subset.systemlogosongamelists}"
		appliesTo="${v.videoGamelists}"
		
	>

		<include name="yes" displayName="${subset.options.yes}" />
		<include name="no" displayName="${subset.options.no}" />	
	
	</subset>

	
	<subset name="systemlogosongamelistbasic"
	
		displayName="${subset.systemlogosongamelists}"
		appliesTo="basic"
		
	>

		<include name="yes" displayName="${subset.options.yes}" />
		<include name="no" displayName="${subset.options.no}" />	
	
	</subset>

	<subset name="systemRegion"
	
		displayName="${subset.systemRegion}"
		
	>
	
		<include name="eu" displayName="eu" />
		<include name="us" displayName="us" />
		<include name="jp" displayName="jp" />
	
	</subset>

	<subset name="batterybar"
	
		displayName="${subset.batterybar}"
		
	>

		<include name="yes" displayName="${subset.options.yes}" />	
		<include name="no" displayName="${subset.options.no}" />
	
	</subset>

	<subset name="version"
	
		displayName="${subset.themeVersionString}"
		appliesTo="${v.themeAuthor}"
		
	>
	
		<include name="${v.themeVersion}" />
	
	</subset>

	<view name="screen">
	
		<controllerActivity name="controllerActivity"
		
			pos="${v.controllerActivity.x} 0.009"
			size="0.185 0.023"
			color="00000000"
			activityColor="00000000"
			hotkeyColor="00000000"
			gunPath="./../parts/controllerActivity/gun.svg"
			wheelPath="./../parts/controllerActivity/wheel.svg"
			imagePath="./../parts/controllerActivity/gamepad.svg"
			itemSpacing="${v.controllerActivity.itemSpacing}"
			
		/>

	</view>

	<view name="system,menu,basic,detailed,grid">
	
		<image name="hide"
		
			extra="true"
			zIndex="100"
			path="./_inc/parts/white.png"
			size="1 1"
			color="${c.base}"
		
		/>
		
		<image name="colorMask"
		
			extra="true"
			linearSmooth="true"
			zIndex="500"
			path="./_inc/parts/white.png"
			origin="0.5 0.5"
			pos="0.5 0.5"
			minSize="1 1"
			color="${c.base}"
			colorEnd="${c.main}00"
			gradientType="vertical"
			opacity="0.5"
			
		/>

		<image name="colorTop,colorBottom"
		
			extra="true"
			zIndex="200"
			path="./_inc/parts/white.png"
			size="1 0.5"
			origin="1 0"
			x="1"
			opacity="0.15"
			gradientType="vertical"
		
		/>

		<image name="colorTop"
		
			extra="true"
			y="0"
			color="${c.main}00"
			colorEnd="${c.main}80"
		
		/>

		<image name="colorBottom"
		
			extra="true"
			y="0.5"
			color="${c.main}80"
			colorEnd="${c.main}00"
		
		/>
	
	</view>

	<include>./_inc/xml/menu.xml</include>
	<include>./_inc/xml/batteryIndicator.xml</include>
	<include>./_inc/xml/help.xml</include>
	<include>./_inc/xml/logo.xml</include>
	<include>./_inc/xml/basic.xml</include>
	<include>./_inc/xml/detailed.xml</include>
	<include>./_inc/xml/detailed_2.xml</include>
	<include>./_inc/xml/grid.xml</include>
	
</theme>
